{
    "version": 2,
    "builds": [
        {
            "src": "Backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "Frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/Backend/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "/Backend/uploads/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/Frontend/$1"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}
